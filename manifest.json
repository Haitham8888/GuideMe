{
  "manifest_version": 3,
  "name": "GuideMe - مساعد التصفح الميسر",
  "version": "1.0.0",
  "description": "إضافة متصفح ذكية لتحسين تجربة التصفح لذوي الإعاقة البصرية مع دعم الأوامر الصوتية وتبسيط المحتوى",
  "author": "GuideMe Team",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tts"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "action": {
    "default_popup": "extension/popup.html",
    "default_icon": {
      "16": "extension/icons/icon16.png",
      "48": "extension/icons/icon48.png",
      "128": "extension/icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "extension/icons/icon16.png",
    "48": "extension/icons/icon48.png",
    "128": "extension/icons/icon128.png"
  },
  
  "background": {
    "service_worker": "extension/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["extension/content.js"],
      "css": ["extension/content.css"],
      "run_at": "document_end"
    }
  ],
  
  "commands": {
    "toggle-voice": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "تفعيل/إيقاف الأوامر الصوتية"
    },
    "simplify-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "تبسيط الصفحة الحالية"
    },
    "read-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "قراءة محتوى الصفحة"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["extension/icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
